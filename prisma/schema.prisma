generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

datasource db {
  provider = "mongodb"
  url      = env("DB_URI")
}
// command to add new models in prisma:
//      npx prisma generate
//      npx prisma db push

model sections {
  id    String @id @default(dbgenerated()) @map("_id") @db.ObjectId
  title String
}

model tecnologies {
  id   String @id @default(dbgenerated()) @map("_id") @db.ObjectId
  logo String
  name String
  url  String
}
model projects {
  id  String @id @default(dbgenerated()) @map("_id") @db.ObjectId
  title String
  description String
  images String[]
  tools String[]
}
model timeline{
  id  String @id @default(dbgenerated()) @map("_id") @db.ObjectId
  title String //this is a date, year to year
  cardTitle String //this is the title company
  url String //this is the url of the company
  cardSubtitle String //this is my position name
  cardDetailedText String //this is the description of the position
}
